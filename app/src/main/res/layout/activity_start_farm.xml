<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.tracafarm.StartFarmActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                xmlns:card="http://schemas.android.com/apk/res-auto"
                android:id="@+id/wheat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?selectableItemBackgroundBorderless"
                card:cardElevation="2dp"
                card:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_wheat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_wheat"
                        android:text="Sowed"
                        android:layout_gravity="center"/>

                    <com.android.tracafarm.StepsView
                        android:id="@+id/stepsView_wheat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:numOfSteps="8" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card="http://schemas.android.com/apk/res-auto"
                android:id="@+id/sugarcane"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?selectableItemBackgroundBorderless"
                card:cardElevation="2dp"
                card:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_sugarcane"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_sugarcane"
                        android:text="Sowed"
                        android:layout_gravity="center"/>

                    <com.android.tracafarm.StepsView
                        android:id="@+id/stepsView_sugarcane"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:numOfSteps="8" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card="http://schemas.android.com/apk/res-auto"
                android:id="@+id/maize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?selectableItemBackgroundBorderless"
                card:cardElevation="2dp"
                card:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_maize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_maize"
                        android:text="Sowed"
                        android:layout_gravity="center"/>

                    <com.android.tracafarm.StepsView
                        android:id="@+id/stepsView_maize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:numOfSteps="8" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>




    </ScrollView>

</RelativeLayout>
